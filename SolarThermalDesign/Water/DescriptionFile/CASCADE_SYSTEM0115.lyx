\begin_layout Standard
The net work of a cycle
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
w_{net}=w_{12}+w_{34}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
w_{12}=\int_{P_{1}}^{P_{2}}Pdv=\int_{v_{1}}^{v_{2}}\frac{RT_{L}}{v}dv=RT_{L}\ln\frac{v_{2}}{v_{1}}=-RT_{L}\ln\gamma
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
where
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\gamma=\frac{v_{max}}{v_{min}}=\frac{v_{1}}{v_{2}}=\frac{v_{4}}{v_{3}}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
w_{34}=\int_{P_{3}}^{P_{4}}Pdv=\int_{v_{3}}^{v_{4}}\frac{RT_{H}}{v}dv=RT_{H}\ln\frac{v_{4}}{v_{3}}=RT_{H}\ln\gamma
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
so
\begin_inset Formula 
\begin{equation}
w_{net}=R(T_{H}-T_{L})\ln\gamma
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
For an imperfect regeneration, the heat absorbed in a cycle
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
q_{abs}=q_{63}+q_{34}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
q_{63}=c_{v}(T_{H}-T_{R})
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
q_{34}=w_{34}=RT_{H}\ln\gamma
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
so
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
q_{abs}=RT_{H}\ln\gamma+c_{v}(T_{H}-T_{R})
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
The cycle efficiency
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\eta=\frac{w_{net}}{q_{abs}}=\frac{T_{H}-T_{L}}{T_{H}+\frac{c_{v}}{R}\cdot\frac{T_{H}-T_{R}}{\ln\gamma}}\label{eq:efficiency1}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
for regeneration effectiveness 
\begin_inset Formula $e=\dfrac{T_{R}-T_{L}}{T_{H}-T_{L}}$
\end_inset

,
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
T_{H}-T_{R}=(1-e)(T_{H}-T_{L})
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
and
\begin_inset Formula 
\begin{equation}
\frac{c_{v}}{R}=\frac{c_{v}}{c_{p}-c_{v}}=\frac{1}{\frac{c_{p}}{c_{v}}-1}=\frac{1}{k-1}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
so Equation 
\begin_inset CommandInset ref
LatexCommand eqref
reference "eq:efficiency1"

\end_inset

 can be written as
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\eta=\frac{T_{H}-T_{L}}{T_{H}+\frac{1-e}{k-1}\cdot\frac{T_{H}-T_{L}}{\ln\gamma}}
\end{equation}

\end_inset


\end_layout

