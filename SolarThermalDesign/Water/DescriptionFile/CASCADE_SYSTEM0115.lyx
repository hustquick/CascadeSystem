\begin_inset Formula 
\begin{equation}
\eta_{II,X}=\frac{1}{1+X\frac{1-\sqrt{\frac{T_{cooler}}{T_{heater}}}}{(\gamma-1)\ln\epsilon_{v}}}\label{eq:incomplete regeneration}
\end{equation}

\end_inset


\end_layout

