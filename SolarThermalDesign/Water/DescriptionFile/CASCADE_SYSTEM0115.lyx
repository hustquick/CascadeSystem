reference "eq:incompleteHeatTransfer"

\end_inset


\begin_inset Formula 
\begin{equation}
X=X_{1}y+X_{2}(1-y)\label{eq:incompleteHeatTransfer}
\end{equation}

\end_inset


\end_layout

